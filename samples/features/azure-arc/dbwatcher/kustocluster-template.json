{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "minLength": 4,
            "maxLength": 22,
            "metadata": {
                "description": "Name of the Azure Data Explorer Cluster. Use only lowercase letters and numbers."
            }
        },
        "location": {
            "type": "string",
            "defaultValue" : "[resourceGroup().location]",
            "metadata": {
                "description": "The Region of the Azure Data Explorer Cluster."
            }
        },
        "properties": {
            "type": "object",
            "metadata": {
                "description": "Specifies the properties of the Azure Data Explorer Cluster, for instance enableStreamingIngest"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The Azure Data Explorer Cluster tags"
            }
        },
        "databases_kustodb_name": {
            "type": "string",
            "defaultValue": "dbWatcher",
            "metadata": {
                "description": "Name of the database to create"
            }
        },
        "sku": {
            "type": "object",
            "metadata": {
                "description": "Specifies the sku"
            }
        },
        "zones": {
            "type": "array",
            "metadata": {
                "description": "The availability zones of the Azure Data Explorer Cluster."
            }
        }
    },
    "variables": {
        "apiVersion": "2022-11-11"
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersion')]",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "properties": "[parameters('properties')]",
            "tags": "[parameters('tags')]",
            "type": "Microsoft.Kusto/Clusters",
            "sku": "[parameters('sku')]",
            "zones": "[parameters('zones')]",
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Kusto/Clusters/Databases",
            "apiVersion": "2022-12-29",
            "name": "[concat(parameters('name'), '/',parameters('databases_kustodb_name'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Kusto/Clusters', parameters('name'))]"
            ],
            "kind": "ReadWrite",
            "properties": {
                "softDeletePeriod": "P365D",
                "hotCachePeriod": "P31D"
            }
        },
        {
            "type": "Microsoft.Kusto/Clusters/Databases/Scripts",
            "apiVersion": "2022-02-01",
            "name": "[concat(parameters('clusterName'), '/', parameters('databases_kustodb_name'), '/', parameters('scriptName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Kusto/Clusters', parameters('name'))]",
                "[resourceId('Microsoft.Kusto/Clusters/Databases', concat(parameters('name'), '/',parameters('databases_kustodb_name')))]"
            ],
            "properties": {
                "scriptContent": "[parameters('kqlScript')]",
                "continueOnErrors": "[parameters('continueOnErrors')]",
                "forceUpdateTag": "[parameters('forceUpdateTag')]"
            }
        }
    ]
}